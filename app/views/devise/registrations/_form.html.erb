<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
<% if !resource.errors.empty? %>
    <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= devise_error_messages! %>
    </div>
<% end %>

<div class="control-group">
	<%= f.label :nome, :class => "control-label" %>
	<div class="controls">
		<%= f.text_field :nome %>
	</div>
</div>

<div class="control-group">
	<%= f.label :email , :class => "control-label"%>
	<div class="controls">
		<%= f.email_field :email %>
	</div>
</div>

<div class="control-group">
	<%= f.label :password, :class => "control-label" %>
	<div class="controls">
		<%= f.password_field :password %>
	</div>
</div>

<div class="control-group">
	<%= f.label :password_confirmation, :class => "control-label" %>
	<div class="controls">
		<%= f.password_field :password_confirmation %>
	</div>
</div>

<div class="control-group">
	<%= f.label :codigo_de_ativacao, :class => "control-label" %>
	<div class="controls">
		<%= f.text_field :codigo_de_ativacao %>
	</div>
</div>

<%= f.hidden_field :denunciante_situacao, :value => Usuario::DENUNCIANTE_CADASTRADO %>

<div class="control-group">
	<div class="controls">
		<%= f.submit "Cadastrar", :class => "btn btn-success btn-large", :disable_with => "Cadastrando..."%>
	</div>
</div>
<% end %>