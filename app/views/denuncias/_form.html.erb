<%= form_for @denuncia, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :data_e_hora, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :data_e_hora, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :latitude, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :latitude, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :longitude, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :longitude, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :situacao, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :situacao, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :denunciante_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :denunciante_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                denuncias_path, :class => 'btn' %>
  </div>
<% end %>
