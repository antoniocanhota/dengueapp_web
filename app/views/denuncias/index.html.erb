<div class="row-fluid">
  <%= render "menu" %>
  <div class="span10">
    <%- model_class = Denuncia.new.class -%>
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:id) %></th>
          <th><%= model_class.human_attribute_name(:data_e_hora) %></th>
          <th><%= model_class.human_attribute_name(:latitude) %></th>
          <th><%= model_class.human_attribute_name(:longitude) %></th>
          <th><%= model_class.human_attribute_name(:situacao) %></th>
          <th><%= model_class.human_attribute_name(:denunciante_id) %></th>
          <th><%= model_class.human_attribute_name(:created_at) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @denuncias.each do |denuncia| %>
          <tr>
            <td><%= link_to denuncia.id, denuncia_path(denuncia) %></td>
            <td><%= denuncia.data_e_hora %></td>
            <td><%= denuncia.latitude %></td>
            <td><%= denuncia.longitude %></td>
            <td><%= denuncia.situacao %></td>
            <td><%= denuncia.denunciante_id %></td>
            <td><%=l denuncia.created_at %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_denuncia_path(denuncia), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                denuncia_path(denuncia),
                :method => :delete,
                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%#= link_to t('.new', :default => t("helpers.links.new")),
      new_denuncia_path,
      :class => 'btn btn-primary' %>
  </div>
</div>
