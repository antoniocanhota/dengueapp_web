<%= render "layouts/error_messages", :target => @operador %> 
<%= form_for @operador, :html => { :class => 'form-horizontal' } do |f| %>
<%= f.fields_for :usuario do |u| %>
  <div class="control-group">
    <%= u.label :nome, :class => 'control-label' %>
    <div class="controls">
      <%= u.text_field :nome, :class => 'text_field span6' %>
    </div>
  </div>
  <div class="control-group">
    <%= u.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= u.text_field :email, :class => 'text_field span4' %>
    </div>
  </div>
<% end %>
<div class="control-group">
  <%= f.label :tipo, :class => 'control-label' %>
  <div class="controls">
    <label class="radio">
      <%= f.radio_button :tipo, Operador::MODERADOR, :checked => true %>
      <%= f.label :tipo_m, 'Moderador' %>
    </label>
  </div>
</div>
<div class="form-actions">
  <%= f.submit "Salvar", :class => 'btn btn-success' %>
  <%= link_to "Cancelar e Voltar", 'javascript:history.back()', :class => 'btn' %>
</div>
<% end %>
