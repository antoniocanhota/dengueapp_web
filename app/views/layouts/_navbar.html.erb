          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Denúncias<b class="caret"></b></a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
            <li><%= link_to "Denúncias dos Usuários", root_path %></li>
