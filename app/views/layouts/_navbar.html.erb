      <!-- LINKS -->
      <%= link_to "DengueApp", root_path, :class => "brand" %>
      <div class="nav-collapse collapse" style="height: 0px;">
      <ul class="nav" role="navigation">
        <!-- DROPDOWN DENUNCIAS -->
